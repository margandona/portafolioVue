# Environment Configuration for Payment Gateways
# Copy this file to .env and fill in your actual credentials

# Node Environment
NODE_ENV=development

# Frontend URL (for return URLs)
FRONTEND_URL=http://localhost:8080

# Transbank Configuration (Chile)
# Get these from: https://www.transbankdevelopers.cl/
TRANSBANK_INTEGRATION_TYPE=TEST  # TEST or LIVE
TRANSBANK_COMMERCE_CODE=597055555532  # Test commerce code
TRANSBANK_API_KEY=579B532A7440BB0C9079DED94D31EA1615BACEB56610332264630D42D0A36B1C  # Test API key

# Production Transbank (uncomment when ready for production)
# TRANSBANK_INTEGRATION_TYPE=LIVE
# TRANSBANK_COMMERCE_CODE=your_production_commerce_code
# TRANSBANK_API_KEY=your_production_api_key

# Stripe Configuration (International)
# Get these from: https://dashboard.stripe.com/
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Production Stripe (uncomment when ready for production)
# STRIPE_PUBLIC_KEY=pk_live_your_production_public_key
# STRIPE_SECRET_KEY=sk_live_your_production_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Firebase Configuration (if not already set)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/firebase-service-account.json

# Other Configuration
PAYMENT_TIMEOUT=300000  # 5 minutes in milliseconds
DEFAULT_CURRENCY=CLP
WEBHOOK_TIMEOUT=30000   # 30 seconds

# Email Configuration (for payment confirmations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Logging
LOG_LEVEL=info  # debug, info, warn, error
